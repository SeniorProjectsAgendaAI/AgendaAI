{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Database (Docker)",
      "type": "shell",
      "command": "docker compose up -d",
      "options": {
        "cwd": "${workspaceFolder}/infra"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false,
        "group": "dev"
      }
    },
    {
      "label": "Stop Database (Docker)",
      "type": "shell",
      "command": "docker compose down",
      "options": {
        "cwd": "${workspaceFolder}/infra"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false,
        "group": "dev"
      }
    },
    {
      "label": "Start Backend",
      "type": "shell",
      "command": "source .venv/bin/activate && uv run uvicorn app.main:app --reload",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Started server process.*$",
          "endsPattern": "^.*Uvicorn running on.*$"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false,
        "group": "dev"
      }
    },
    {
      "label": "Stop Backend",
      "type": "shell",
      "command": "pkill -f uvicorn",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false,
        "group": "dev"
      }
    },
    {
      "label": "Start Frontend",
      "type": "shell",
      "command": "npm start",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*webpack.*$",
          "endsPattern": "^.*Compiled.*$"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false,
        "group": "dev"
      }
    },
    {
      "label": "Stop Frontend",
      "type": "shell",
      "command": "pkill -f react-scripts",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false,
        "group": "dev"
      }
    },
    {
      "label": "Start Full Stack",
      "dependsOn": [
        "Start Database (Docker)",
        "Start Backend",
        "Start Frontend"
      ],
      "problemMatcher": []
    },
    {
      "label": "Stop Full Stack",
      "dependsOn": [
        "Stop Frontend",
        "Stop Backend",
        "Stop Database (Docker)"
      ],
      "problemMatcher": []
    }
  ]
}
